{
  "name": "sourceplusplus",
  "displayName": "Source++",
  "description": "This project contains the VSCode plugin for Source++, the open-source live coding platform. This plugin also works with regular Apache SkyWalking installations, but only Live View commands are supported.",
  "version": "0.6.7",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "sourceplusplus.addBreakpoint",
        "title": "Source++: Add Breakpoint"
      }
    ],
    "configuration": {
      "title": "Source++",
      "properties": {
        "sourceplusplus.host": {
          "type": "string",
          "description": "Host",
          "default": "http://localhost:12800",
          "order": 0
        },
        "sourceplusplus.accessToken": {
          "type": "string",
          "description": "Access Token",
          "default": "change-me",
          "order": 1
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.70.0",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "@vscode/test-electron": "^2.1.5",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@vertx/eventbus-bridge-client.js": "^1.0.0-3-SNAPSHOT",
    "axios": "^0.27.2"
  }
}
